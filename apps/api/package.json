{
  "name": "@revivepass/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "pnpm --filter @revivepass/shared build && tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test src/**/*.test.ts",
    "db:init": "tsx src/scripts/init-db.ts",
    "seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/multipart": "^7.7.3",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/umi": "^1.1.1",
    "@metaplex-foundation/umi-bundle-defaults": "^1.1.1",
    "@metaplex-foundation/umi-web3js-adapters": "^1.1.1",
    "@revivepass/shared": "workspace:*",
    "@solana/web3.js": "^1.98.0",
    "better-sqlite3": "^11.8.1",
    "bs58": "^6.0.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "fastify": "^4.29.0",
    "nanoid": "^5.1.4",
    "tweetnacl": "^1.0.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/bs58": "^4.0.4",
    "@types/node": "^22.13.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
